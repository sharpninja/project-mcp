@inherits LayoutComponentBase
@using ProjectMcp.WebApp.Components.Shared

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <TopBanner />
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
            <AuthorizeView>
                <Authorized>
                    <span class="top-row-username">@(context.User.Identity?.Name ?? "User")</span>
                </Authorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            <AppScope>
                @Body
            </AppScope>
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
